{
  "compilerOptions": {
    "jsx": "react-jsx",          // ✅ for React 17+
    "esModuleInterop": true,     // ✅ resolves import issues
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
